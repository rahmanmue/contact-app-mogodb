<div class="container mt-2">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Edit Data Kontak</h2>
            <% if (typeof errors != 'undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(x => { %>
                            <li><%= x.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>



            <form method="post" action="/contact?_method=PUT">
                <input type="hidden" name="_id" value="<%= contact._id %>">
                <input type="hidden" name="oldName" value="<%= contact.oldName || contact.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                  <label for="noHp" class="form-label">NoHp</label>
                  <input type="text" class="form-control" id="noHp" name="noHp" required value="<%= contact.noHp %>">
                </div>
                
                <button type="submit" class="btn btn-primary">Edit Data Kontak</button>
              </form>
        </div>
    </div>
</div>